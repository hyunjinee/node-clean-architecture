{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./build",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "paths": {
      "@*": ["src/*"],
      "@config": ["./src/config"],
      "@loaders": ["./src/loaders"],
      "@utils": ["./src/utils"],
      "@routes": ["./src/routes"],
      "@models": ["./src/models"],
      "@schemas": ["./src/schemas"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "test"]
}
